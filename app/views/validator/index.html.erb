<div id="fields">
            <fieldset style="display: block; visibility: visible; opacity: 1;" id="validate-by-uri" class="tabset_content front">
               <legend class="tabset_label">Validate by URI</legend>
                 <%= form_tag '/validator/validate',:id =>"validate_url" do %>
                  <p class="instructions">
                    Input format (ex): "www.cognizant.com"
                  </p>
                  <p>
                     <label title="Address of page to Validate" for="uri">Address:<font size="2" color="red">*</font></label>
                     <!--<input value="" name="uri" id="uri" size="45" type="text" style = "background: url('textbg.png') no-repeat scroll left top rgb(254, 254, 254);">-->
			<%= text_field_tag 'uri','', :size=>"45", :style=>  "background: url('textbg.png') no-repeat scroll left top rgb(254, 254, 254);"%> <%= image_tag("help.png",:id=>"help_url")%><br/>
			<span class="note" style="padding-left:85px;"></span>
                     </br></br>
                     <input id="direct-st" name="st" value="1" type="checkbox"  checked="checked" disabled="true">
                     <label for="direct-st">Clean up Markup with HTML-Tidy</label>
                  </p>
                  </br>
                  <p class="submit_button">
                   <!--  <input title="Submit for validation" value="Check" type="submit" class="submit">-->
		     <%= submit_tag "Check",:class=>"submit"%>
                  </p>
               <% end %>

            </fieldset>
         </div>
         <!-- fields -->
    <script type="text/javascript">
        $(document).ready(function () {
            $('#help_url').gips({ 'theme': 'blue', autoHide: true, text: "Input url's separated by commas(,)" });
        });
    </script>